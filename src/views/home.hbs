<div class="container">
  <h1 class="text-center mb-4">Danh sách chấm công</h1>

  <nav class="navbar bg-light mb-4 rounded">
    <div class="container-fluid">
      <form method="GET" class="d-flex w-100">
        <input class="form-control me-2" name="id" type="search" placeholder="Nhập ID nhân viên" required>
        <button class="btn btn-outline-success" type="submit">Tìm kiếm</button>
      </form>
    </div>
  </nav>

  {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      {{error}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {{/if}}

  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title">Bản ghi chấm công</h2>
      {{#if clockInRecords.length}}
        <div style="max-height: 300px; overflow-y: auto;">
          <ul class="list-group">
          {{#each clockInRecords}}
            <li class="list-group-item">
              <span>Nhân viên ID: {{this.EmployeeID}}</span>
              <span>Thời gian chấm công: {{formatDate this.ClockInTime}}</span>
            </li>
          {{/each}}
        </ul>
        </div>
      {{else}}
        <p class="text-muted">Không có bản ghi chấm công nào.</p>
      {{/if}}
    </div>
  </div>
</div>